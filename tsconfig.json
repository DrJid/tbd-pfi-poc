// This is the tsconfig for the build process
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false, // TODO: Enable and fix build
    "strictNullChecks": false, // TODO: Enable and fix build
    "moduleResolution": "node",
    "baseUrl": "./app",
    "rootDirs": [],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/"],
  "exclude": []
}

