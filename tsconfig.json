{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "target": "es2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "types": ["node"], 
  },
  "typeRoots": ["./node_modules/@types"],
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
